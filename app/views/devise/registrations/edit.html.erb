<div id="wrap">
  <div class="container">
    <br />
    <div class="panel panel-default">
      <div class="panel-heading", style="color: #fff;">
        <div class="panel-title">
          <h3><%= resource.username.upcase %></h3>
        </div>
      </div>
      <div class="panel-body", style="color: #000;">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="col-md-10">
              <div class="form-group">
                <%= f.label :avatar %> <i><small>(for best results, use a square picture)</small></i>
                <%= f.file_field :avatar, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-2 center">  
              <%= image_tag @user.avatar.url(:thumb), :class => "img-circle" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <i><span id="charsleft" class="small"></span></i>
            <%= f.text_field :description, class: "form-control", id: "message", :maxlength => 140, onKeyDown: "textCounter('message','messagecount',140)", onKeyUp: "textCounter('message','messagecount',140)" %>
            <span id="charsleft" class="small"></span>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password %> <i><small>(leave blank if you don't want to change it)</small></i>
            <%= f.password_field :password, class: "form-control", :autocomplete => "off" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i><small>(we need your current password to confirm your changes to email or password)</small></i>
            <%= f.password_field :current_password, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer", style="color: #fff;">
        <small>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></small>
      </div>
    </div>
  </div>
</div>

<script>
  function textCounter(textarea, countdown, maxlimit) {
    var textareaid = document.getElementById(textarea);
      if (textareaid.value.length > maxlimit)
        textareaid.value = textareaid.value.substring(0, maxlimit);
      else
        document.getElementById('charsleft').innerHTML = '('+(maxlimit-textareaid.value.length)+' characters available)';
  }
</script>

<script type="text/javascript">
  textCounter('message','messagecount',140);
</script>