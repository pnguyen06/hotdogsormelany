<div id="wrap">
  <div class="container" style="margin-top: 30px;">
  	<div class="row">
  		<div class="col-md-3">
				<%= image_tag @user.avatar.url(:medium), :class => "img-circle" %>
				<br /><br />
				<h4 style="color: #fff; font-weight: bold"><%= @user.username.upcase %></h4>
				<p style="color: #bdc3c7; margin-top: -10px;">(<%= @user.name %>)</p>
				<p style="color: #fff;"><%= @user.description %></p>
				<p style="color: #fff;">Joined <%= @user.created_at.strftime("%B %Y") %></p>
			</div>
			<div class="col-md-8" style="color: #fff;">
				<h5>
					<% if @bolt.last.updated_at == @bolt.last.created_at %>
						Posted <%= short_age_string(@bolt.last.created_at) %>
					<% else %>
						Updated <%= short_age_string(@bolt.last.updated_at) %>
					<% end %>
				</h5>
				<h1>
					<%= @bolt.last.description %>
				</h1>
			</div>
  	</div>
	</div>
</div>