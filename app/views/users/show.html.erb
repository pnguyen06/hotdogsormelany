<div id="wrap">
  <div class="container" style="margin-top: 30px;">
  	<div class="row">
  		<div class="col-md-3">
				<%= image_tag @user.avatar.url(:medium), :class => "img-circle" %>
				<br /><br />
				<p style="color: #fff; font-weight: bold"><%= @user.username.upcase %></p>
				<p style="color: #bdc3c7; margin-top: -10px;">(<%= @user.name %>)</p>
				<p style="color: #fff;"><%= @user.description %></p>
				<p style="color: #fff;">Joined <%= @user.created_at.strftime("%B %Y") %></p>
			</div>
			<div class="col-md-8" style="color: #fff;">
				<h4>
					<% if @pin.last.updated_at == @pin.last.created_at %>
						Posted on <%= @pin.last.created_at.strftime("%b %d") %>
					<% else %>
						Updated on <%= @pin.last.updated_at.strftime("%b %d") %>
					<% end %>
				</h4>
				<h1>
					<%= @pin.last.description %>
				</h1>
			</div>
  	</div>
	</div>
</div>